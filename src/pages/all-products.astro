---
import Card from "../components/Card.astro";
import ListProducts from "../components/ListProducts.astro";
import { products } from "../data/products";
import Layout from "../layouts/Layout.astro";
---

<Layout title="Nuevo producto">
  <main class="p-4">
    <div class="flex flex-col justify-between items-start mb-4 gap-4">
      <h1 class="text-2xl font-semibold">Todos los productos</h1>
      <a
        href="/new-product"
        class="bg-blue-600 border-blue-600 border-[1px] text-gray-100 font-medium py-2 px-6 rounded block hover:bg-blue-700 hover:text-gray-100"
      >
        Agregar Producto</a
      >
    </div>
    <ul class="grid grid-cols-box-x gap-8 mb-4 justify-center">
      {
        products.map((item) => (
          <Card
            id={item.id}
            name={item.name}
            price={item.price}
            description={item.description}
            image={item.image}
            category={item.category}
          />
        ))
      }
    </ul>
  </main>
</Layout>
