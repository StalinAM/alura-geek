---
import Layout from "../layouts/Layout.astro";
import Button from "../components/Button.astro";
---

<Layout title="hola">
    <main class="bg-gray-100 flex items-center flex-col">
        <h1 class="font-bold">Iniciar Sesión</h1>
        <form class="flex flex-col w-72 gap-4" action="">
            <input
                class="p-4 rounded"
                placeholder="Escriba su correo electrónico"
                type="text"
                name=""
                id=""
            />
            <input class="rounded p-4" type="text" name="" id="" />
            <Button text="entrar" />
        </form>
    </main>
</Layout>
