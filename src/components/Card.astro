---
const { id, name, price, description, image, admin = false } = Astro.props;
---

<li class="flex flex-col gap-2 h-full relative">
  <img
    class="rounded-lg"
    src={image}
    alt={description}
    style={`view-transition-name: product-${id}`}
  />
  <h2 class="font-medium text-gray-800">{name}</h2>
  <p class="font-bold text-gray-600 text-xl">$ {price}</p>
  <a href={`/${id}`} class="text-blue-700 font-semibold">Ver producto</a>
  {
    admin && (
      <div class="absolute top-2 right-2 flex gap-4 items-center">
        <svg
          class="cursor-pointer group"
          width="19"
          height="19"
          viewBox="0 0 19 19"
          xmlns="http://www.w3.org/2000/svg"
        >
          <path
            class="group-hover:fill-red-500"
            d="M0 15.25V19H3.75L14.81 7.94L11.06 4.19L0 15.25ZM17.71 5.04C18.1 4.65 18.1 4.02 17.71 3.63L15.37 1.29C14.98 0.899998 14.35 0.899998 13.96 1.29L12.13 3.12L15.88 6.87L17.71 5.04Z"
            fill="white"
          />
        </svg>
        <svg
          class="cursor-pointer group"
          width="14"
          height="18"
          viewBox="0 0 14 18"
          xmlns="http://www.w3.org/2000/svg"
        >
          <path
            class="group-hover:fill-red-500"
            d="M1 16C1 17.1 1.9 18 3 18H11C12.1 18 13 17.1 13 16V4H1V16ZM14 1H10.5L9.5 0H4.5L3.5 1H0V3H14V1Z"
            fill="white"
          />
        </svg>
      </div>
    )
  }
</li>
